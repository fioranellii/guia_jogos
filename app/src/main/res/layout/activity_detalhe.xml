<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/android:windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â›Œ"
            android:layout_gravity="start"
            android:layout_marginBottom="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <ImageView
            android:id="@+id/imgCapaDetalhe"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/capa_jogo" />

        <TextView
            android:id="@+id/tvNomeDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/android:textColor"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDesenvolvedoraDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/android:textColorSecondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGeneroDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDescricaoDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/android:textColor"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steam"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnWiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wiki"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>
</ScrollView>
